create or replace      function  crear_cat_permiso
(
	in nombre_ varchar(150),
	in descripcion_ text,
	in registrado_por_ int
)
returns table(
	num  integer,
	nombre varchar(150),
	descripcion text
)
    language 'plpgsql'
AS $body$

declare identificador integer = (select case when (select max(num_permiso) from cat_permiso) is null
			then 1 else (select max(num_permiso) from cat_permiso)+1 end);

begin

insert into cat_permiso 
(
	num_permiso ,
	nombre_permiso ,
	descripcion,
	registrado_por,
	fecha_registro 
)
values
(
	identificador,
	lower(nombre_),
	descripcion_,
	registrado_por_,
	current_date
);
return query  select CE.num_permiso,
					 CE.nombre_permiso,
					 CE.descripcion 
					 from cat_permiso CE where CE.num_permiso = identificador limit 1;
end;
$body$;
