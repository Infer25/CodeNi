create or replace      function  crear_cat_categoria_proveedor
(
	in nombre_ varchar(150),
	in descripcion_ text,
	in registrado_por_ int
)
returns table(
	num  integer,
	nombre varchar(150),
	descripcion text
)
    language 'plpgsql'
AS $body$

declare identificador integer = (select case when (select max(num_categoria_proveedor) from cat_categoria_proveedor) is null
			then 1 else (select max(num_categoria_proveedor) from cat_categoria_proveedor)+1 end);

begin

insert into cat_categoria_proveedor 
(
	num_categoria_proveedor ,
	nombre_categoria_proveedor ,
	descripcion,
	registrado_por,
	fecha_registro 
)
values
(
	identificador,
	lower(nombre_),
	descripcion_,
	registrado_por_,
	current_date
);
return query  select CE.num_categoria_proveedor,
					 CE.nombre_categoria_proveedor,
					 CE.descripcion 
					 from cat_categoria_proveedor CE where CE.num_categoria_proveedor = identificador limit 1;
end;
$body$;
