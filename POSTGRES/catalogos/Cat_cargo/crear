create or replace      function  crear_cat_cargo
(
	in num_area_ int,
	in nombre_ varchar(150),
	in descripcion_ text,
	in registrado_por_ int
)
returns table(
	num  integer,
	nombre varchar(150),
	descripcion text
)
    language 'plpgsql'
AS $body$

declare identificador integer = (select case when (select max(num_cargo) from cat_cargo) is null
			then 1 else (select max(num_cargo) from cat_cargo)+1 end);

begin

insert into cat_cargo 
(
	num_cargo ,
	num_area,
	nombre ,
	descripcion,
	registrado_por,
	fecha_registro 
)
values
(
	identificador,
	num_area_,
	lower(nombre_),
	descripcion_,
	registrado_por_,
	current_date
);
return query  select CE.num_cargo,
					 CE.nombre,
					 CE.descripcion 
					 from cat_cargo CE where CE.num_cargo = identificador limit 1;
end;
$body$;


