create or replace      function  crear_cat_rol
(
	in nombre_ varchar(150),
	in descripcion_ text,
	in registrado_por_ int
)
returns table(
	num  integer,
	nombre varchar(150),
	descripcion text
)
    language 'plpgsql'
AS $body$

declare identificador integer = (select case when (select max(num_rol) from cat_rol) is null
			then 1 else (select max(num_rol) from cat_rol)+1 end);

begin

insert into cat_rol 
(
	num_rol ,
	nombre_rol ,
	descripcion,
	registrado_por,
	fecha_registro 
)
values
(
	identificador,
	lower(nombre_),
	descripcion_,
	registrado_por_,
	current_date
);
return query  select CE.num_rol,
					 CE.nombre_rol,
					 CE.descripcion 
					 from cat_rol CE where CE.num_rol = identificador limit 1;
end;
$body$;
