{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
  "strictNullChecks": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
  
}
